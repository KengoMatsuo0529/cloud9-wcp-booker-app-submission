<h1>Editing Book</h1>
<div class="table"><%= form_with model:@book, local:true do |f| %>
 <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2 class="error-text">error</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<label for="book_title">Title</label>
  <div class="field"><%= f.text_field :title %></div>

  <label for="book_body">Body</label>
  <div class="area"><%= f.text_area :body %></div>

<div><%= f.submit "Update Book" %></div>
<% end %>
</div>
<p><%= link_to "Show", "/books/#{@book.id}" %>
|
<%= link_to "Back", "/books" %></p>